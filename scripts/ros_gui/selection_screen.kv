#:import FadeTransition kivy.uix.screenmanager.FadeTransition

MDBoxLayout:

    ScreenManager:
        id: screen_manager
        transition: FadeTransition(duration=.2, clearcolor=app.theme_cls.bg_dark)

        Home:
            id: home
            name: "home"

            MDBackdrop:
                id: backdrop
                title: "Kitchen Sink"
                header_text: "Menu:"
                left_action_items: [["menu", lambda x: self.open()]]
