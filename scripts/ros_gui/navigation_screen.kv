#:import get_color_from_hex kivy.utils.get_color_from_hex

FloatLayout:    
    MDScreen:
        MDBottomNavigation:
            panel_color: get_color_from_hex("#eeeaea")
            selected_color_background: get_color_from_hex("#97ecf8")
            text_color_active: 0, 0, 0, 1

            MDBottomNavigationItem:
                name: 'screen 1'
                text: 'Mail'
                icon: 'gmail'
                badge_icon: "numeric-10"

                MDLabel:
                    text: 'Mail'
                    halign: 'center'

            MDBottomNavigationItem:
                name: 'screen 2'
                text: 'Discord'
                icon: 'discord'
                badge_icon: "numeric-5"

                MDLabel:
                    text: 'Discord'
                    halign: 'center'

            MDBottomNavigationItem:
                name: 'screen 3'
                text: 'LinkedIN'
                icon: 'linkedin'

                MDLabel:
                    text: 'LinkedIN'
                    halign: 'center'